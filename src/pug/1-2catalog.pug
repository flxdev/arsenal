  //.products-outer родитель ,в нем row с заголовкам и товарами
  .products-outer
    .products-row
      h1.u-intro.h1 Металлочерепица
      .products-inner
        mixin Productcart(name, img, prop1, prop2, price, type)
          .product-card-wrapper
            .product-card-outer
              a(href="#").product-card-inner
                .product-card-img
                  img(src=img, alt="")
                .categories-elem-name #{name}
                .u-text 
                  span.prop
                    span Высота:
                    span.price #{prop1} ,
                  span.prop
                    span шаг волны:
                    span.price #{prop1} 
                .product-card-price 
                  |#{price}
                  span.u-graytext.old 1000р.
              .product-card-more
                a(href="#").btn.t-blue Подробнее
              .flags-wrap
                - var val = type
                if val == '1'
                  .flag-item.discount 
                    span -15%
                else if val == '2'
                  .flag-item.hit 
                    span Hit
                  .flag-item.discount 
                    span -25%
                else if val == '3'
                  .flag-item.new
                    span New
                else if val == '4'
                  .flag-item.hit 
                    span Hit
                  .flag-item.discount 
                    span -55%
                  .flag-item.new
                    span New
                else if val == '0'
          
