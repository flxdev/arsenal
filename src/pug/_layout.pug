mixin icon(name)
  svg(class="icon icon-" + name)
    use(xlink:href="#icon-" + name)

doctype html
html
  head
    meta(charset="utf-8")
    block title
      title Jade Layout Template
    include includes/_head.pug
  body
    //BEGIN out
    .out
      .page__outer
        .page__wrapper
          header.page__header.cd-auto-hide-header
            include includes/_header.pug
          //combine menu and content
          .page__wrapper-inner
            aside.page__menu
              include includes/_main-menu.pug
            section.page__content
              .page__accii
                a(href="#").accii-item(style='background-image:url(img/accii1.jpg)')
                a(href="#").accii-item(style='background-image:url(img/accii2.jpg)')
              block content
              include includes/_footer.pug
              include includes/_modals.pug


    //END out
    